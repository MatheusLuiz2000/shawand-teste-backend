{
  "name": "service-pattern",
  "version": "1.0.3-0",
  "description": "",
  "main": "server.js",
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn version --prepatch --no-git-tag-version && git add ."
    }
  },
  "scripts": {
    "dev": "nodemon src/server.ts ",
    "docs": "apidoc -i src/app/docs -o apidoc/ ",
    "deploy": "sequelize db:migrate && npm run start",
    "pretest": "cross-env NODE_ENV=test sequelize db:migrate",
    "test": " jest --forceExit --bail --runInBand --detectOpenHandles",
    "posttest": "cross-env NODE_ENV=test sequelize db:migrate:undo:all ",
    "start": " pm2-runtime start ./node_modules/sucrase/bin/sucrase-node --name api -- ./src/server.ts -i --watch "
  },
  "repository": {
    "type": "git",
    "url": "git+https://nicholas-ferreira-gcb@bitbucket.org/grupo_gcb/service-pattern.git"
  },
  "author": "",
  "apidoc": {
    "title": "API Docs",
    "url": "https://bitbucket.org/grupo_gcb/service-pattern#readme"
  },
  "license": "ISC",
  "homepage": "https://bitbucket.org/grupo_gcb/service-pattern#readme",
  "dependencies": {
    "aws-sdk": "^2.596.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "log-gcb": "^1.0.8",
    "moment": "^2.24.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.17.0",
    "sequelize": "^5.21.3",
    "typescript": "^3.7.4",
    "youch": "^2.0.10",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "@types/passport-http-bearer": "^1.0.34",
    "@types/sequelize": "^4.28.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "apidoc": "^0.19.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
