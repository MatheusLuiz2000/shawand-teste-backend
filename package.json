    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sequelize-cli": "^5.5.1",
    "sqlite3": "^4.1.1",
    "sucrase": "^3.11.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0"
  }
